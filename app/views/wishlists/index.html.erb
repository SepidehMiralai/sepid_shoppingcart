<p id="notice"><%= notice %></p>

<h1><%=@current_user.name%>'s Wishlist</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wishlists.each do |wishlist| %>
      <tr>
        <td class = .wish_style><%= wishlist.name %> </td>
        <td><%= image_tag(wishlist.img_url, class: 'list_image') %> </td>
        <td><%= link_to 'Destroy', wishlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>      
    <% end %>
  </tbody>
</table>

<br>


